<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="home.htm">homeController</prop>
                
                <prop key="contract.htm">contractController</prop>
                <prop key="customer.htm">customerController</prop>
                <prop key="department.htm">departmentController</prop>
                <prop key="dictionary.htm">dictionaryController</prop>
                <prop key="employee.htm">employeeController</prop>
                <prop key="file.htm">fileController</prop>
                <prop key="manageFile.htm">manageFileController</prop>
                <prop key="group.htm">groupController</prop>
                <prop key="key.htm">keyController</prop>
                <prop key="position.htm">positionController</prop>
                <prop key="raport.htm">raportController</prop>
                <prop key="setting.htm">settingController</prop>
                <prop key="terminal.htm">terminalController</prop>
                <prop key="user.htm">userController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    
    <bean name="loginController"
          class="pl.edu.pjwstk.cms.controllers.LoginController"/>
    <bean name="homeController"
          class="pl.edu.pjwstk.cms.controllers.HomeController"/>
    
    <bean name="contractController"
          class="pl.edu.pjwstk.cms.controllers.ContractController"/>
    <bean name="customerController"
          class="pl.edu.pjwstk.cms.controllers.CustomerController"/>
    <bean name="departmentController"
          class="pl.edu.pjwstk.cms.controllers.DepartmentController"/>
    <bean name="dictionaryController"
          class="pl.edu.pjwstk.cms.controllers.DictionaryController"/>
    <bean name="employeeController"
          class="pl.edu.pjwstk.cms.controllers.EmployeeController"/>
    <bean name="fileController"
          class="pl.edu.pjwstk.cms.controllers.FileController"/>
    <bean name="manageFileController"
          class="pl.edu.pjwstk.cms.controllers.ManageFileController"/>
    <bean name="groupController"
          class="pl.edu.pjwstk.cms.controllers.GroupController"/>
    <bean name="keyController"
          class="pl.edu.pjwstk.cms.controllers.KeyController"/>
    <bean name="positionController"
          class="pl.edu.pjwstk.cms.controllers.PositionController"/>
    <bean name="raportController"
          class="pl.edu.pjwstk.cms.controllers.RaportController"/>
    <bean name="settingController"
          class="pl.edu.pjwstk.cms.controllers.SettingController"/>
    <bean name="terminalController"
          class="pl.edu.pjwstk.cms.controllers.TerminalController"/>
    <bean name="userController"
          class="pl.edu.pjwstk.cms.controllers.UserController"/>

</beans>
